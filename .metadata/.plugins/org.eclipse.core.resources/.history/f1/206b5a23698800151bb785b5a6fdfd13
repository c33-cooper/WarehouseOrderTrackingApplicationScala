

import java.security.MessageDigest
 * @author callum
 */
class Encryption {
  
  /**
   * Encryption attributes
   */
  val crypt : MessageDigest
  
  /**
   * Default constructor
   */
  def Encryption{
  }
  
  /**
   * Check password string against a SHA1 conversion
   */
  def checkSHA1(passwordString : String) : String ={
    try{
         crypt = MessageDigest.getInstance("SHA1")
    }
  }
  
}